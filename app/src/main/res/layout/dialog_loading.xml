<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/base_eight_dp">

    <ProgressBar
        android:layout_width="@dimen/loading_progress_width"
        android:layout_height="@dimen/loading_progress_height"
        android:theme="@style/ProgressiveBar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_wait"
        android:textSize="@dimen/loading_textsize"
        android:layout_gravity="center_vertical"/>

</LinearLayout>